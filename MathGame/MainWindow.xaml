                        <TextBox  Margin="10"  Width="100"  Height="50" />
                        <TextBox  Margin="10"  Width="100"  Height="50" />
                    </StackPanel>
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Height="Auto">
