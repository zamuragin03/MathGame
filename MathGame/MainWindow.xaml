                        <TextBox  Margin="10"  Width="100"  Height="50" />
                        <TextBox  Margin="10"  Width="100"  Height="50" />
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Name="Colorizedwords" Header="25" Width="100" Background="#FF025FE8">
